<div class="review">

  <div class="review-rating" data-score="<%= review.rating %>"></div>
  <p class="review-comment"><%= review.comment %></p>

  <% if user_signed_in? %>

    <div class="links btn-group">

    <% if review.user_id == current_user.id %>
    
      <%= link_to "Edit", edit_podcast_review_path(review.podcast, review), class: "btn btn-custom" %>
      <%= link_to "Delete", podcast_review_path(review.podcast, review), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-custom" %>

    </div>

    <% end %>

  <% end %>

</div>
