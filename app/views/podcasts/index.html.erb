<h1 class="current-category"><%= params[:category] %></h1>

<% if @podcasts.count == 0 %>
    <h1>There are no podcasts currently in this category</h1>
  <% else %>

  <div class="row">

  <% @podcasts.each do |podcast| %>
    
    <div class="col-md-3">

    <a href="/podcasts/<%= podcast.id %>">
      <%= image_tag podcast.podcast_img.url(:podcast_index), class: "podcast" %>
    </a>
  </div>

  <% end %>


</div>



<% end %>

